{
  "name": "robo-stream-client-web",
  "version": "0.1.1",
  "description": "Robo-Stream Web Client - OBS Touchscreen Controller",
  "main": "electron-main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "cap:init": "cap init",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "npm run build && cap sync",
    "cap:sync:ios": "npm run build && cap sync ios",
    "cap:sync:android": "npm run build && cap sync android",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "cap:run:ios": "npm run cap:sync:ios && cap run ios",
    "cap:run:android": "npm run cap:sync:android && cap run android",
    "ios": "npm run cap:sync:ios && cap open ios",
    "android": "npm run cap:sync:android && cap open android",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.robostream.robostreamclient",
    "productName": "Robo-Stream-Client",
    "directories": {
      "output": "electron-dist",
      "buildResources": "electron-assets"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json"
    ],
    "mac": {
      "identity": "Apple Development: Robert Ford (38JEVZP58S)",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "electron-assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron-assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "electron-assets/icon.png",
      "maintainer": "robo <robomon1@gmail.com>"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "obs",
    "streaming",
    "controller",
    "touchscreen",
    "capacitor",
    "mobile"
  ],
  "author": "robo <robomon1@gmail.com>",
  "homepage": "https://github.com/robomon1/robo-stream",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.5.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.5.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  }
}
